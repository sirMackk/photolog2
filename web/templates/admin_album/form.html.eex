<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div>
      <p>Please check the errors below!</p>
    </div>
  <% end %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :description %>
  <%= textarea f, :description %>
  <%= error_tag f, :description %>

  <%= label f, :status %>
  <%= select f, :status, album_status_map, prompt: "Choose a status" %>
  <%= error_tag f, :name %>

  <%= submit "Save" %>
<% end %>
